@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудники</title>
</head>
<body>
    <h3>Сотрудники</h3>
    <table>
        <thead>
            <tr>
                <td>#</td>
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
                <td>Должность</td>
                <td>Ссылка</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Job</td>
                    @*<td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>*@
                    @*<td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id"> Детали </a></td>*@
                    @*<td><a href="/Home/Employee/@employee.Id/">Детали</a></td>*@
                    <td>@Html.ActionLink("Детали", "Employee", new { id = employee.Id })</td>
                </tr>
            }
        </tbody>   
    </table>
    <hr />
    <a href="~/">Домой</a>
</body>
</html>
